<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{asset('styles/bootstrap.min.css')}}">
        <link rel="stylesheet" href="{{asset('styles/header.css')}}">
        <script src="{{asset('script/header.js')}}" defer></script>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
          <header class="home-section">
     
 	          <div class="sidebar-button">
               	<i class="bx bx-menu sidebarBtn"></i>
               	<h3><span class="dashboard">PHA</span>RM</h3>
               </div>
	          {% if is_granted('ROLE_ADMIN') %}
                    <form action="">
	          		<select name="" id="select" class="form-select">
	          			<option value="" disabled>Séléctionner en un</option>
	          			<option {% if (app.current_route starts with 'admin')%} selected {% endif %} value="admin">Administrateur</option>
	          			<option {% if (app.current_route starts with 'users') %} selected {% endif %} value="users">Utilisateur</option>
	          		</select>
	          	</form>
               {% endif %}
               
	          <div class="admins d-flex align-items-center justify-content-center flex-row gap-3">
                    <a class="liens {{ app.current_route == "admin.index" ? 'active' : ''}}" href="/users">Accueil</a>
                    <a class="liens {{ 'medicament' in app.current_route ? 'active' : '' }}" href="{{path('admin.medicament')}}">Médicaments</a>
	          	{# <a class="liens {{ 'category' in app.current_route ? 'active' : '' }}" href="{{path('admin.category')}}">Catégories</a> #}
	          	{# <a class="liens {{ 'admin.users' in app.current_route ? 'active' : '' }}" href="{{path('admin.users')}}">Utilisateurs</a> #}
	          	{# <a class="liens {{ 'admin.ventes' in app.current_route ? 'active' : '' }}" href="{{path('admin.ventes')}}">Ventes</a> #}
	          </div>
               {% if app.user %}
                    <form action="/logout" method="POST">
                         <input type="submit" class="btn btn-danger" value="Se déconnecter">
                    </form>
                    <a style="text-decoration:none;" href="/users/profil/<?=$_SESSION['user']->id?>" class="profile-details">
	          	     {# <?php if (isset($_SESSION['user']))
	          	     	$user = $_SESSION['user'];
	          	     ?>
                         {% if app.user %}
	          	     	<img src="/<?=$user->image?>" alt="" />
                         {% endif %}

	          	     <?php if (isset($user->image)): ?>
	          	     <?php else: ?>
	          	     	<div class="randoms">
                                   <span class="random d-flex align-items-center justify-content-center" style="background:<?=$color?>;"><?=substr($user->nom, 0, 1)?></span>
                              </div>
	          	     <?php endif ?>
               	     <span class="admin_name"><?=$user->nom?> <?=$user->prenom?></span>
               	     <i class="bx bx-chevron-down"></i> #}
                    </a>
               {% endif %}
               
          </header>
          {% block body %}{% endblock %}
    </body>
</html>
